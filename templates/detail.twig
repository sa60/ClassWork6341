<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body>
    {% include 'partials/navigation.twig' %}
        <main class="container-fluid">
            <div class="row">
            <div class="col-md-6">
                { % if detail.images | length > 1 %}
                <div class="carousel slide" id+"product-carousel" data-ride="carousel">
                <div class="carousel-inner">
                    {% for image in detail.images %}
                    {% set active = loop.index == 1 ? 'active' : '' %}
                    <div class="carousel-item" {{active}}>
                    <img class="w-100" src="{{image}}">
                    </div>
                    {% endfor %}
                    </div>
                {% else %}
                    {% for image in detail.images %}
                        <img src="images/products/products/{{detail.images}}" class="img-fluid">
                    {% endfor %}
                {% endif %}
            </div>
            <div class="col-md-6">
                <h3>{{detail.product.name}}</h3>
                <h5>{{detail.product.price}}</h5>
                <p>{{detail.product.description}}</p>
            </div>
            </div>
        </main>
    </body>

</html>