<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body >
    {% include 'partials/navigation.twig' %}
        <main class="container-fluid" style="padding-top:30px;">
            <div class="row">
                <div class="col-md-4 offset-md-2">
                    {% if detail.images | length > 1 %}
                    <div class="carousel slide" id="product-carousel" data-ride="carousel">
                        <div class="carousel-inner">
                        {% for image in detail.images %}
                        {% set active = loop.index == 1 ? 'active' : '' %}
                            <div class="carousel-item {{active}}">
                                <img class="w-100" src="images/products/products/{{image}}">
                            </div>
                        {% endfor %}
                        </div>
                        <ol class="carousel-indicators">
                            {% for image in detail.images %}
                            <li data-target="#product-carousel" data-slide-to="{{loop.index0}}">
                                <img src="images/products/products/{{image}}" class="img-fluid">
                            </li>
                            {% endfor %}
                        </ol>
                    </div>
                    {% else %}
                        {% for image in detail.images %}
                            <img src="images/products/products/{{image}}" class="img-fluid">
                        {% endfor %}
                    {% endif %}
                     <a class="carousel-control-prev" href="#product-carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="col-md-4">
                    <h3 class="text-capitalize">{{detail.product.name}}</h3>
                    <h5 class="price">{{detail.product.price}}</h5>
                    <p>{{detail.product.description}}</p>
                </div>
            </div>
        </main>
    </body>
</html>