<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body>
    {% include 'partials/navigation.twig' %}
        <main class="container-fluid mt-4">
            <div class="row">
                <div class="col-md-6">
                {% if detail.images | length == 1 %}
                    {% for image in detail.images %}
                        <img class="img-fluid" src="images/products/{{image.image_file_name}}">
                    {% endfor %}
                {% else %}
                    {# carousel #}
                    <div class="carousel slide" data-ride="carousel" id="product-carousel">
                        <div class="carousel-inner">
                            {% for image in detail.images %}
                            {% set active = (loop.index0 == 0) ? 'active' : '' %}
                            <div class="carousel-item {{active}}">
                                <img src="images/products/{{image.image_file_name}}">
                            </div>
                            {% endfor %}
                            <ol class="carousel-indicators">
                                {% for image in detail.images %}
                                {% set active = (loop.index0 == 0) ? 'active' : '' %}
                                <li data-target="#product-carousel" data-slide-to="{{loop.index0}}" class="{{active}}">
                                </li>
                            {% endfor %}
                            </ol>
                        </div>
                    </div>
                {% endif %}
                </div>
                <div class="col-md-6">
                    <h3>{{detail.product.name}}</h3>
                    <h5>{{detail.product.price}}</h5>
                    <p>{{detail.product.description}}</p>
                    <form class="form-inline" id="shop-form">
                        <input type="number" min="1" max="10" class="form-control" value="1">
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>